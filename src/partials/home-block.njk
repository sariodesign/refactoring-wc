<section class="c-home-block">

  {% for item in homeblock %}
    <div class="c-home-block__item">

      <figure>
        <img class="lazy" data-src="{{item.imagesrc}}" alt="">
      </figure>
      
      {% if item.link %}
        <h3>
          <a href="{{item.link}}" title="Richiedi un preventivo gratuito">{{item.title}}</a></h3>
      {% else %}
        <h3>{{item.title}}</h3>
      {% endif %}
      
      <p>{{item.text}}</p>

    </div>
  {% endfor %}

</section>
