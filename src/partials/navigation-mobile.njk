<nav class="c-navigation--mobile">
  {% for item in navmobile %}
    <div class="c-navigation__label--mobile js-open-submenu">
      {% if item.subnav %}
        <span>{{ item.label }}</span>
        <div class="c-navigation__submenu--mobile">
          <div class="c-navigation__category">{{item.label}}</div>
          <ul class="o-list">
            {% for subitem in item.subnav %}
              {% if subitem.subcategory %}
                <li class="c-navigation__subitem">
                  <span class="c-navigation__label--mobile js-open-subcategory">{{ subitem.nolink }}</span>
                  <ul class="c-navigation__subcategory o-list">
                    {% for subitemcategory in subitem.subcategory %}
                      <li class="c-navigation__subitem">
                        <a class="c-navigation__sublink o-link" href="{{subitemcategory.sublink}}">{{subitemcategory.sublabel}}</a>
                      </li>
                    {% endfor %}
                  </ul>
                </li>
              {% else %}
                <li>
                  <a class="c-navigation__label--mobile o-link" href="{{subitem.link}}">{{subitem.label}}</a>
                </li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
      {% else %}
        <a class="o-link" href="{{ item.link }}">{{ item.label }}</a>  
      {% endif %}
    </div>
  {% endfor %}
  <div class="c-navigation__back-btn js-back-menu">
      <svg class="o-icon o-icon--small">
        <use xlink:href="#icon-back"></use>
      </svg>
    </div>
</nav>
