<!DOCTYPE html>
<html lang="en" dir="ltr">
  {% include "head.njk" %}
  <body>

    {% include "navigation-toggle.njk" %}

    <header class="c-header">
      {% include "top-header.njk" %}
      <div class="o-wrapper u-flex u-flex-between u-flex-center-items">
        <a href="index.html">
          <img class="c-header__logo" src="img/logo.png" alt="Innova logo">
        </a>
        {% include "navigation.njk" %}
      </div>
    </header>


    <main>
      {% block content %} {% endblock %}
    </main>

    {% if homepage %}
      {% include "parallax-home-img.njk" %}
    {% endif %}

    <footer class="c-footer">
      {% include "footer-content.njk" %}
    </footer>

    <div class="o-overlay">
      {% include "navigation-mobile.njk" %}
    </div>

    <script src="js/lazy-load.js"></script>
    <script src="js/jquery.min.js"></script>
    <script src="js/app.js"></script>
    {% if homepage %}
    <script src="js/slider.js"></script>
    {% endif %}

    {% if gallery %}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.3/dist/jquery.fancybox.min.css" />
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.3/dist/jquery.fancybox.min.js"></script>
    {% endif %}

    {% if animate %}
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <script src="https://unpkg.com/aos@next/dist/aos.js"></script>
    <script>
      AOS.init({
        once: true
      });
    </script>
    {% endif %}


  </body>
</html>
