<!DOCTYPE html>
<html lang="en" dir="ltr">
  {% include "head.njk" %}
  <body>

    {% include "navigation-toggle.njk" %}

    <header class="c-header">
      {% include "top-header.njk" %}
      <div class="o-wrapper">
        <img src="img/logo.png" alt="">
        {% include "navigation.njk" %}
      </div>
    </header>


    <main>
      {% block content %} {% endblock %}
    </main>

    {% if homepage %}
      {% include "parallax-home-img.njk" %}
    {% endif %}

    <footer class="c-footer">
      {% include "footer-content.njk" %}
    </footer>

    <div class="o-overlay">
      {% include "navigation-mobile.njk" %}
    </div>

    <script src="js/jquery.min.js"></script>
    <script src="js/app.js"></script>

  </body>
</html>
