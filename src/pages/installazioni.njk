{% extends "company-page.njk" %}
{% set pageTitle = "Clienti" %}
{% set metaDesc = "Sono presenti su tutto il territorio nazionale, diverse nostre installazioni. Nei comuni, presso clienti privati e aree di servizio o aree camping" %}

  {% block content %}

    <figure>
      <img src="img/header-azienda.jpg" alt="">
    </figure>

    <div class="o-wrapper">

      <section class="o-intro">
        <h1 class="o-intro__title">Installazioni</h1>
        <p class="o-intro__text">Sono presenti su tutto il territorio nazionale, diverse nostre installazioni. Nei comuni, presso clienti privati e aree di servizio o <strong>aree camping</strong></p>
      </section>

      <section class="o-section u-cF">

          <div class="o-block-text">
            <ul class="o-block-checklist">
              <li>
                <svg class="o-icon o-icon--tiny o-icon--green">
                   <use xlink:href="#icon-check"></use>
                </svg>BWC Black Water Camper</li>
              <li>
                <svg class="o-icon o-icon--tiny o-icon--green">
                   <use xlink:href="#icon-check"></use>
                </svg>BWC Easy</li>
              <li>
                <svg class="o-icon o-icon--tiny o-icon--green">
                   <use xlink:href="#icon-check"></use>
                </svg>CWC Compact Water Camper</li>
              <li>
                <svg class="o-icon o-icon--tiny o-icon--green">
                   <use xlink:href="#icon-check"></use>
                </svg>MWC Mini Water Camper</li>
            </ul>
            <div>
              <button class="o-btn o-btn--standard">
                <a class="o-btn__link" href="https://www.google.com/maps/d/viewer?hl=it&mid=1DiU2BNreuS6IKgs0RubaDuZpb--3kuTt&ll=42.486984275636246%2C12.540172999999982&z=6" target="_blank">Visualizza le nostre installazioni</a>
              </button>
            </div>
          </div>

          <div class="o-block-image">

            <figure>
              <img src="img/installazioni.jpg" alt="">
            </figure>            

          </div>

      </section>

    </div>


  {% endblock %}
